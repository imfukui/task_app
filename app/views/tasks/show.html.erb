<h2>スケジュール詳細</h2>

<table>
  <tr>
    <th>タイトル</th>
    <td><%= @task.title %></td>
  </tr>

  <tr>
    <th>開始日</th>
    <td><%= @task.start %></td>
  </tr>

  <tr>
    <th>投稿日時</th>
    <td><%= @task.created_at.to_s(:datetime_jp)%></td>
  </tr>
  
  <tr>
    <th>終日</th>
    <td><%= "○" if @task.allday.include?("1") %></td>
  </tr>
  
  <tr>
    <th>メモ</th>
    <td><%= @task.memo %></td>
  </tr>
</table>

<ul>
  <li><%= link_to "スケジュール一覧に戻る", tasks_path %></li>
</ul>